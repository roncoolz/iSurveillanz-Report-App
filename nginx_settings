server {
    listen 80;
    server_name 194.164.150.176;  # Your VPS IP or domain name if you have one

    location / {
        proxy_pass http://127.0.0.1:8000;  # Change the port to match the port Gunicorn is running on
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
